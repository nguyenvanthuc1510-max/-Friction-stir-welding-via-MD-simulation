# 3d friction simulation
units        metal
dimension	3
boundary	p p p
atom_style	atomic
neighbor	2 bin
neigh_modify	delay 5

# create geometry
region box  block -350 30 -20 120 -50.5 50.5 units box 
create_box 	3       box 

mass        1 26.9815 
mass		2 24.305 
mass		3 12.011 

lattice fcc 4.05 orient x 1 0 0 orient y 0 1 0 orient z 0 0 1
region  upslab block -170 20 -10 40 0.5 50.5 units box 
create_atoms 1 region upslab
group upslab region upslab 

# lattice constants (in Ã…)
variable        a    equal 3.2094      
variable        c    equal 5.2108        

# define the hcp lattice
lattice hcp 3.21 spacing 1.0 1.0 1.624  
region  slab1 block -170 20 -10 40 -50.5 -0.5 units box 
create_atoms 2 region slab1
group slab1 region slab1  
group slab union upslab slab1

lattice		diamond 3.57 
region		tool1 prism      -142 -122 45 65 -10 10 0 0 0 units box #  
region		tool2 cylinder y -132 0 35 65 80 units box 
create_atoms	3 region tool1
create_atoms	3 region tool2
group		tool1 region tool1
group		tool2 region tool2
group		tool union tool1 tool2 

# define groups
region lo-fixed1 block INF INF -10 -6 INF INF units box
group  lo-fixed1 region lo-fixed1
region side-fixed1 block INF INF  INF INF -50.5 -46.5  units box
group  side-fixed1 region side-fixed1
region side-fixed2 block INF INF  INF INF 46.5 50.5  units box
group  side-fixed2 region side-fixed2
region side-fixed3 block 16 20 INF INF  INF INF units box
group  side-fixed3 region side-fixed3
region side-fixed4 block -170 -166 -10 30  INF INF units box
group  side-fixed4 region side-fixed4
group  lo-fixed union lo-fixed1 side-fixed1 side-fixed2 side-fixed3 side-fixed4


